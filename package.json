{
  "name": "fpfstudent",
  "version": "1.0.0",
  "description": "This GitHub repository is a web application that connects students who need help with their academic tasks with other students who can offer their skills and expertise.",
  "scripts": {
    "start": "cross-env NODE_ENV=production bun run src/server.ts",
    "dev": "cross-env NODE_ENV=development bun run --watch src/server.ts",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "eslint --fix --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "bun run lint -- --fix",
    "deploy:prod": "bun run build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev"
  },
  "author": "flasonnguyen",
  "license": "ISC",
  "type": "module",
  "trustedDependencies": [
    "sharp",
    "bcrypt"
  ],
  "dependencies": {
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "image-size": "^1.0.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "probe-image-size": "^7.2.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.35.1",
    "sharp": "^0.32.6",
    "tslint": "^6.1.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.2.4",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/pg": "^8.6.5",
    "@types/probe-image-size": "^7.2.4",
    "@types/sequelize": "^4.28.14",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "bun-types": "latest",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "pm2": "^5.2.2",
    "prettier": "^2.8.1",
    "sequelize-typescript": "^2.1.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
