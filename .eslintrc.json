{
  // Configuration for JavaScript files
  "extends": [
    "airbnb-base",
    "next/core-web-vitals"
    // Needed to avoid warning in next.js build: 'The Next.js plugin was not detected in your ESLint configuration'
    // "plugin:prettier/recommended"
  ],
  "rules": {
    // "prettier/prettier": [
    //   "error",
    //   {
    //     "singleQuote": true,
    //     "endOfLine": "auto"
    //   }
    // ]
    // Avoid conflict rule between Prettier and Airbnb Eslint
  },
  "overrides": [
    // Configuration for TypeScript files
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "plugins": [
        "@typescript-eslint",
        "unused-imports",
        "simple-import-sort"
      ],
      "extends": [
        "airbnb",
        "airbnb-typescript",
        "next/core-web-vitals"
        // "plugin:prettier/recommended"
      ],
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "rules": {
        "linebreak-style": 0,
        "function-paren-newline": 0,
        "no-multiple-empty-line": 0,
        "implicit-arrow-linebreak": 0,
        "@typescript-eslint/indent": 0,
        "eol-last": 0,
        "arrow-body-style": 0,
        "react/button-has-type": 0,
        "@typescript-eslint/consistent-type-imports": 0,
        "jsx-a11y/anchor-is-valid": 0,
        "react/jsx-one-expression-per-line": 0,
        "max-len": "off",
        "jsx-a11y/control-has-associated-label": 0,
        "eqeqeq": 0,
        "operator-linebreak": 0,
        "jsx-a11y/no-static-element-interactions": 0,
        "jsx-a11y/heading-has-content": 0,
        "no-nested-ternary": 0,
        "padded-blocks": 0,
        "@typescript-eslint/object-curly-spacing": 0,
        "@typescript-eslint/no-shadow": 0,
        "react/jsx-tag-spacing": 0,
        "react/jsx-indent": 0,
        "react/jsx-indent-props": 0,
        "no-confusing-arrow": 0,
        "react/jsx-closing-tag-location": 0,
        "react/jsx-closing-bracket-location": 0,
        "spaced-comment": 0,
        "object-shorthand": 0,
        "@typescript-eslint/naming-convention": 0,
        "import/no-useless-path-segments": 0,
        "react/jsx-max-props-per-line": 0,
        "radix": 0,
        "react/no-danger": 0,
        "@typescript-eslint/no-unused-expressions": 0,
        "consistent-return": 0,
        "no-trailing-spaces": 0,
        "react/jsx-wrap-multilines": 0,
        "react/self-closing-comp": 0,
        "react/jsx-first-prop-new-line": 0,
        "no-plusplus": 0,
        "prefer-template": 0,
        "no-unsafe-optional-chaining": 0,
        "jsx-quotes": 0,
        "react/jsx-curly-newline": 0,
        "jsx-a11y/no-noninteractive-element-interactions": 0,
        "react/style-prop-object": 0,
        "react/no-unused-prop-types": 0,
        "jsx-a11y/click-events-have-key-events": 0,
        // "prettier/prettier": [
        //   "error",
        //   {
        //     "singleQuote": true,
        //     "endOfLine": "auto"
        //   }
        // ],
        // Avoid conflict rule between Prettier and Airbnb Eslint
        "import/extensions": "off",
        // Avoid missing file extension errors, TypeScript already provides a similar feature
        "react/function-component-definition": "off",
        // Disable Airbnb's specific function type
        "react/destructuring-assignment": "off",
        // Vscode doesn't support automatically destructuring, it's a pain to add a new variable
        "react/require-default-props": "off",
        // Allow non-defined react props as undefined
        "react/jsx-no-useless-fragment": "off",
        // Allow empty fragment
        "react/no-array-index-key": "off",
        // Allow array index as key
        "react/jsx-props-no-spreading": "off",
        "react/no-unescaped-entities": "off",
        "jsx-a11y/label-has-associated-control": "off",
        // _app.tsx uses spread operator and also, react-hook-form
        "@typescript-eslint/comma-dangle": "off",
        // Avoid conflict rule between Eslint and Prettier
        // Ensure `import type` is used when it's necessary
        "import/no-extraneous-dependencies": "off",
        "import/newline-after-import": 0,
        "no-useless-catch": 0,
        "no-multiple-empty-lines": 0,
        "@typescript-eslint/semi": 0,
        "@typescript-eslint/quotes": 0,
        "object-curly-newline": 0,
        "no-restricted-syntax": [
          "error",
          "ForInStatement",
          "LabeledStatement",
          "WithStatement"
        ],
        // Overrides Airbnb configuration and enable no-restricted-syntax
        "import/prefer-default-export": "off",
        // Named export is easier to refactor automatically
        "simple-import-sort/imports": "warn",
        // Import configuration for `eslint-plugin-simple-import-sort`
        "simple-import-sort/exports": "warn",
        // Export configuration for `eslint-plugin-simple-import-sort`
        "import/order": "off",
        "no-param-reassign": "off",
        // Avoid conflict rule between `eslint-plugin-import` and `eslint-plugin-simple-import-sort`
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/return-await": "off"
        //        "unused-imports/no-unused-imports": "error",
        //        "unused-imports/no-unused-vars": [
        //          "error",
        //          {
        //            "argsIgnorePattern": "^_"
        //          }
        //        ]
      }
    },
    // Configuration for testing
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx"
      ],
      "plugins": [
        "jest",
        "jest-formatting",
        "testing-library",
        "jest-dom"
      ],
      "extends": [
        "plugin:jest/recommended",
        "plugin:jest-formatting/recommended",
        "plugin:testing-library/react",
        "plugin:jest-dom/recommended"
      ]
    }
  ]
}